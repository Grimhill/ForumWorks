@model Forum.Models.CommentViewModel

@{
    ViewBag.Title = "DeleteReply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="delacccont">
    <div class="delaccgrp">
        <div class="delacclbl" style="text-align:center;">Are you sure?</div>
    </div>
    @using (Html.BeginForm("DeleteReply", "Forum", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()

            <div class="delaccgrp">
                <input type="hidden" value="@Model.Id" name="replyid" />
                <input type="hidden" value=false name="deleteReplies" />
                <input type="submit" value="Delete Reply" class="btn btn-default delaccbtn" />
            </div>
    }
    @using (Html.BeginForm("DeleteReply", "Forum", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="delaccgrp">
            <input type="hidden" value="@Model.Id" name="replyid" />
            <input type="hidden" value=true name="deleteReplies" />
            <input type="submit" value="Delete Reply with children" class="btn btn-default delaccbtn" />
        </div>       
    }
</div>

