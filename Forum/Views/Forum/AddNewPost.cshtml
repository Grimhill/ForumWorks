{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" value=true name="CanselCreation" />
            <input class="canseltBtn" type="submit" value="Cansel" />
        </div>
    </div>
}

